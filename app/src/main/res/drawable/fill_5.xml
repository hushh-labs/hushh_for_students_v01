<!-- res/drawable/button_layer_list.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape (solid color) -->
    <item>
        <shape>
            <solid android:color="#E34C65" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- Gradient overlay shape -->
    <item>
        <shape>
            <gradient
                android:startColor="#E34C65"
                android:endColor="#E34C65"
                android:type="linear"
                android:angle="45" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>