<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#fff"
    android:background="#fff"
    tools:context=".NewCardMarketAct">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#fff"
        android:background="#fff">

        <TextView
            android:id="@+id/textView37"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="Card Market"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView37"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView37"
            app:srcCompat="@drawable/back_arrow_kushal" />


        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/image_slider"
            android:layout_width="0dp"
            android:layout_height="240dp"
            android:layout_marginTop="16dp"
            android:animateLayoutChanges="true"
            app:iss_auto_cycle="true"
            app:iss_delay="0"
            app:iss_period="2000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recyclerViewHorizontal"
            tools:ignore="NotSibling" />


        <!-- Your existing layout -->

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label"
            tools:listitem="@layout/layout_card_item" />

        <TextView
            android:id="@+id/label1"
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:layout_marginTop="16dp"
            android:lineSpacingExtra="1sp"
            android:shadowColor="#A0A4B0"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="0.5"
            android:text="LUXURY BRAND CARD"
            android:textColor="#A0A4B0"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/label"
            app:layout_constraintStart_toStartOf="@+id/label"
            app:layout_constraintTop_toBottomOf="@+id/image_slider" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/horizontalGridView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label1"
            app:spanCount="3"
            tools:listitem="@layout/layout_card_brand_item" />

        <TextView
            android:id="@+id/label2"
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:layout_marginTop="16dp"
            android:lineSpacingExtra="1sp"
            android:text="INSURANCE CARD"
            android:shadowColor="#A0A4B0"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="0.5"
            android:textColor="#A0A4B0"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/label"
            app:layout_constraintStart_toStartOf="@+id/label"
            app:layout_constraintTop_toBottomOf="@+id/horizontalGridView" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/horizontalGridView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label2"
            app:spanCount="3"
            tools:listitem="@layout/layout_card_brand_item" />

        <TextView
            android:id="@+id/label3"
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:layout_marginTop="16dp"
            android:lineSpacingExtra="1sp"
            android:text="CULINARY CARD"
            android:shadowColor="#A0A4B0"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="0.5"
            android:textColor="#A0A4B0"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/label"
            app:layout_constraintStart_toStartOf="@+id/label"
            app:layout_constraintTop_toBottomOf="@+id/horizontalGridView2" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/horizontalGridView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label3"
            app:spanCount="3"
            android:layout_marginTop="16dp"
            tools:listitem="@layout/layout_card_brand_item" />

        <TextView
            android:id="@+id/label4"
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:layout_marginTop="16dp"
            android:lineSpacingExtra="1sp"
            android:text="TRAVEL CARD"
            android:shadowColor="#A0A4B0"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="0.5"
            android:textColor="#A0A4B0"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/label"
            app:layout_constraintStart_toStartOf="@+id/label"
            app:layout_constraintTop_toBottomOf="@+id/horizontalGridView3" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/horizontalGridView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label4"
            app:spanCount="3"
            android:layout_marginTop="16dp"
            tools:listitem="@layout/layout_card_brand_item" />

        <TextView
            android:id="@+id/label5"
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:layout_marginTop="16dp"
            android:lineSpacingExtra="1sp"
            android:text="SHOPPING CARD"
            android:shadowColor="#A0A4B0"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="0.5"
            android:textColor="#A0A4B0"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/label"
            app:layout_constraintStart_toStartOf="@+id/label"
            app:layout_constraintTop_toBottomOf="@+id/horizontalGridView4" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/horizontalGridView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label5"
            app:spanCount="3"
            android:layout_marginTop="16dp"
            tools:listitem="@layout/layout_card_brand_item" />

        <TextView
            android:id="@+id/label6"
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:layout_marginTop="16dp"
            android:lineSpacingExtra="1sp"
            android:text="HOTELS CARD"
            android:shadowColor="#A0A4B0"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="0.5"
            android:textColor="#A0A4B0"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/label"
            app:layout_constraintStart_toStartOf="@+id/label"
            app:layout_constraintTop_toBottomOf="@+id/horizontalGridView5" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/horizontalGridView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label6"
            app:spanCount="3"
            android:layout_marginTop="16dp"
            tools:listitem="@layout/layout_card_brand_item" />


        <TextView
            android:id="@+id/label"
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:layout_marginTop="16dp"
            android:lineSpacingExtra="1sp"
            android:shadowColor="#A0A4B0"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="0.5"
            android:text="GENERAL PREFERENCE CARD"
            android:textColor="#A0A4B0"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/imageView6"
            app:layout_constraintTop_toBottomOf="@+id/imageView6" />

        <RelativeLayout
            android:id="@+id/imageView6"
            android:layout_width="0dp"
            android:layout_height="57dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rectangular_outline_grey_thick"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/textView37" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="40dp"
            android:layout_height="0dp"
            android:layout_margin="6dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView6"
            app:layout_constraintStart_toStartOf="@+id/imageView6"
            app:layout_constraintTop_toTopOf="@+id/imageView6"
            app:srcCompat="@drawable/icon" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView10"
            app:layout_constraintEnd_toEndOf="@+id/imageView6"
            app:layout_constraintStart_toEndOf="@+id/imageView10"
            app:layout_constraintTop_toTopOf="@+id/imageView10">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/search_for_a_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:inputType="text"
                android:hint="Search for a card"
                android:padding="8dp"
                android:textColor="#000"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>







    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>